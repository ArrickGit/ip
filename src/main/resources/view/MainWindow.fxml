<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="rootPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="pompompurin.gui.MainWindow">
    <ImageView fx:id="backgroundImage" />
    <BorderPane>
        <center>
            <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER">
                <content>
                    <VBox fx:id="dialogContainer" spacing="10" style="-fx-padding: 12;" />
                </content>
            </ScrollPane>
        </center>
        <bottom>
            <HBox spacing="8" style="-fx-padding: 10;">
                <TextField fx:id="userInput" HBox.hgrow="ALWAYS" onAction="#handleUserInput" />
                <Button fx:id="sendButton" text="Send" onAction="#handleUserInput" />
            </HBox>
        </bottom>
    </BorderPane>
</StackPane>
